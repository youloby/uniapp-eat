  -webkit-align-items: center;
          align-items: center;
}
.new-container .new .item .goods .text .buy .price {
  color: #f44;
  font-size: 30rpx;
  font-weight: 700;
}
.new-container .new .item .goods .text .buy .price .tag {
  margin-right: 4rpx;
  font-size: 24rpx;
}
.new-container .new .item .goods .text .buy .icon {
  width: 40rpx;
}
.new-container .new .all-shell {
  display: inline-block;
  vertical-align: middle;
  margin: 0 20rpx 0 10rpx;
  width: 200rpx;
}
.new-container .new .all-shell .all {
  color: #969799;
  font-size: 24rpx;
